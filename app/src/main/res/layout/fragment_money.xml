<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <!-- Header Section with Balance -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#673AB7"
        android:padding="20dp"
        android:paddingBottom="32dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:tint="@android:color/white"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Transaction History"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Filter Button -->
        <ImageButton
            android:id="@+id/btn_filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Filter"
            android:tint="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Balance Card (Overlapping) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Balance Header with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="#673AB7"
                    android:contentDescription="Balance"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Current Account Balance"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:textStyle="bold" />

                <!-- Refresh Button -->
                <ImageButton
                    android:id="@+id/btn_refresh_balance"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_popup_sync"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Refresh Balance"
                    android:tint="#673AB7" />
            </LinearLayout>

            <!-- Balance Amount -->
            <TextView
                android:id="@+id/text_account_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹50,000.00"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <!-- Balance Change Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/arrow_up_float"
                    android:tint="#10B981"
                    android:contentDescription="Trend"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2.5% this month"
                    android:textSize="12sp"
                    android:textColor="#10B981"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Transactions Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recent Transactions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A" />

            <!-- Transaction Count Badge -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#EDE7F6">

                <TextView
                    android:id="@+id/text_transaction_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 txns"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- RecyclerView for Transactions -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty_state"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <!-- Empty State Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#F3F4F6">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:tint="#9CA3AF"
                    android:contentDescription="No Transactions" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Empty State Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Transactions Yet"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginTop="24dp" />

            <!-- Empty State Message -->
            <TextView
                android:id="@+id/text_empty_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No transactions recorded yet.\nStart by sending money to someone!"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp" />

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send_money_empty"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Send Money Now"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                app:backgroundTint="#673AB7"
                app:elevation="4dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>