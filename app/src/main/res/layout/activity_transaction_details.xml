<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Status -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:padding="24dp"
            android:paddingBottom="40dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:tint="@android:color/white"
                android:layout_alignParentStart="true" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Transaction Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true" />

            <!-- Share Button -->
            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Share"
                android:tint="@android:color/white"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- Status Card (Overlapping) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="-20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Status Icon -->
                <ImageView
                    android:id="@+id/image_status_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:contentDescription="Status Icon"
                    app:tint="#10B981" />

                <!-- Status Text -->
                <TextView
                    android:id="@+id/text_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APPROVED"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"
                    android:layout_marginTop="12dp" />

                <!-- Status Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction Completed Successfully"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Amount Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Paid"
                android:textSize="14sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/text_detail_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹1,000.00"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Transaction Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E5E7EB"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Card Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:layout_marginBottom="16dp" />

                <!-- Sender UPI -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_detail_sender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user@upi"
                            android:textSize="15sp"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="#673AB7"
                        android:contentDescription="Sender"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginBottom="16dp" />

                <!-- Receiver UPI -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_detail_receiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="receiver@upi"
                            android:textSize="15sp"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="#673AB7"
                        android:contentDescription="Receiver"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginBottom="16dp" />

                <!-- Message -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        android:textSize="12sp"
                        android:textColor="#9CA3AF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_detail_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For testing fraud engine"
                        android:textSize="15sp"
                        android:textColor="#1A1A1A"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Fraud Analysis Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E5E7EB"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Card Title with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:tint="#673AB7"
                        android:contentDescription="Security"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security Analysis"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A" />
                </LinearLayout>

                <!-- Risk Score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Risk Score"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_detail_risk_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85 / 100"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#F59E0B"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Risk Level Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_risk_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FEF3C7">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HIGH RISK"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#F59E0B"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginBottom="16dp" />

                <!-- Decision Reason -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Decision Reason"
                        android:textSize="12sp"
                        android:textColor="#9CA3AF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_detail_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High velocity transaction alert."
                        android:textSize="15sp"
                        android:textColor="#1A1A1A"
                        android:layout_marginTop="4dp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>