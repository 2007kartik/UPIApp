<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Raw JSON Developer Mode"
        android:textColor="#D81B60"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit the JSON body below to test the API"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/edit_dev_json_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Paste JSON Request here..."
        android:inputType="textMultiLine"
        android:gravity="top"
        android:fontFamily="monospace"
        android:padding="15dp"
        android:textColor="@color/black"
        android:background="@drawable/edittext_border_bg"
        android:scrollbars="vertical"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_dev_initiate_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAY WITH UPI"
        android:padding="15dp"
        android:textSize="18sp"
        android:backgroundTint="#001B60"/>

</LinearLayout>